<% layout("/layout/boilerplate") -%>
<div class="row-3 mt-3">
    <h1 class="col-6 offset-3">wanderlust singup form</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method ="POST" class="needs-validation" novalidate>
             <div class="mb-3">
               <label for="username" class="form-label">username</label>
                <input id="username" name="form[username]"
                       type="text" class="form-control" required/>
                <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="mb-3">
               <label for="email" class="form-label">email</label>
                <input id="email" name="form[email]"
                       type="text" class="form-control" required/>
            </div>
             <div class="mb-3">
               <label for="password" class="form-label">password</label>
                <input id="password" name="form[password]"
                       type="text" class="form-control" required/>
            </div>
            <button class="btn btn-success">singup</button>
        </form>

    </div>

</div>