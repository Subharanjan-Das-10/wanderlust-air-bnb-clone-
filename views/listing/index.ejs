<% layout("/layout/boilerplate") -%>

<body>
  <h3>All Listings</h3>

  <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1">
    <% for (listing of allListing) { %>
      <div class="card">
        <a href="/listing/<%= listing.id %>">
          <img src="<%= listing.image.url %>" class="card-img-top" style="height: 22rem;" alt="listing_image">
          <div class="card-img-overlay">subharanjan</div>
        </a>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b><br/>
            &#8377;<%= listing.price.toLocaleString("en-IN") %>/night
          </p>
        </div>
      </div>
    <% } %>
  </div>
</body>
