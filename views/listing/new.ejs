<% layout("/layout/boilerplate") -%>
<body>
    <h3>create new listing</h3>
    <form method="POST" action="/listing">
        <input name="listing[title]" placeholder="typping a title for this listing" type="text">
        <br/> <br/>
        <textarea name="listing[description]" placeholder="typping valuable description for this listing" type="text"></textarea>
        <br/> <br/>
        <input name="listing[price]" placeholder="enter price for this listing" type="number">
        <br/> <br/>
        <input name="listing[image]" placeholder="url link" type="text">
        <br/> <br/>
        <input name="listing[location]" placeholder="enter location for this listing" type="text">
        <br/> <br/>
        <input name="listing[country]" placeholder="enter country for this listing" type="text">
        <br/> <br/>
        <button class="btn btn-success">save</button>
    </form>
</body>
